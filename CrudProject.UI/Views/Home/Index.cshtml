@model IEnumerable<CrudProject.Api.Models.Joke>


@{
    ViewData["Title"] = "ViewJokes";
}
<style>
    #tbl thead {
        text-align: center;
    }

    #tbl tr td {
        text-align: right;
    }
</style>

<div class="row">

    <div class="col-md-12">
        <div class="form-group form-inline">

            <div class="col-md-2">
                <a asp-action="Create" class="btn btn-primary fa fa-plus" data-toggle="tooltip" title="Create New Joke"> </a>


            </div>
            <div class="input-group offset-6">
                <form asp-action="Search">
                    <p>
                        <input type="text" class=" form-control form-control-sm" name="SearchString" placeholder="Search String" required />
                        <input type="submit" class="btn btn-sm btn-primary" value="Search" />
                    </p>
                </form>
                <a class="nav-link text-danger" asp-area="" asp-controller="Home" asp-action="Index" >Reset</a>

            </div>
        </div>


    </div>
</div>



<table class="table table-striped table-bordered" id="tbl">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JokeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ratings)
            </th>
            <th>
                @Html.DisplayName("Actions")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.JokeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ratings)  / 10
                </td>
                <td>
                    <a class="btn btn-warning fa fa-edit" data-toggle="tooltip" title=" Edit Joke" asp-action="Edit" asp-route-id="@item.JokeId"> </a>
                    <a class="btn btn-danger fa fa-trash" data-toggle="tooltip" title="Delete Joke" asp-action="Delete" asp-route-id="@item.JokeId"> </a>
                </td>
            </tr>
        }
    </tbody>
</table>



